//program on 1D and 2D array

#include <stdio.h>

int main() {
    // 1D Array Example: Storing and displaying elements
    int arr1D[5];
    printf("Enter 5 elements for the 1D array:\n");
    for (int i = 0; i < 5; i++) {
        scanf("%d", &arr1D[i]); // Input elements for the 1D array
    }

    printf("Elements of the 1D array are:\n");
    for (int i = 0; i < 5; i++) {
        printf("%d ", arr1D[i]); // Display elements of the 1D array
    }
    printf("\n\n");

    // 2D Array Example: Storing and displaying elements
    int arr2D[3][3];
    printf("Enter 9 elements for the 2D array (3x3):\n");
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            scanf("%d", &arr2D[i][j]); // Input elements for the 2D array
        }
    }

    printf("Elements of the 2D array are:\n");
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < 3; j++) {
            printf("%d ", arr2D[i][j]); // Display elements of the 2D array
        }
        printf("\n"); // Newline for each row
    }

    return 0;
}